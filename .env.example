# Harvest Hub Configuration File
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE
# ==========================================
# MongoDB Connection String (Atlas or local)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/harvest-hub

# ==========================================
# AUTHENTICATION
# ==========================================
# JWT Secret for token signing (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# Enable/disable seeding of default admin user on startup
SEED_DEFAULT_ADMIN=false

# ==========================================
# SMS CONFIGURATION
# ==========================================
# SMS Provider: "twilio" or "mock" (mock logs to console, useful for development)
SMS_PROVIDER=mock

# Twilio Credentials (required if SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==========================================
# SERVER CONFIGURATION
# ==========================================
# Server port (default: 5000)
PORT=5000

# Environment: development, staging, or production
NODE_ENV=development

# ==========================================
# FILE UPLOADS
# ==========================================
# Max file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file extensions for photos/signatures (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# ==========================================
# EMAIL (Optional - for future email notifications)
# ==========================================
# SMTP Server
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# From address for emails
EMAIL_FROM=noreply@harvest-hub.local

# ==========================================
# FRONTEND (Vite)
# ==========================================
# Frontend URL (for CORS and links)
VITE_API_URL=http://localhost:5000
VITE_APP_NAME=Harvest Hub
